<form method="post" action="/new_item/<%= @potluck_id %>">
  Item:
  <input type="text" name="item[name]">
  <br>
  Guest:
  <input type="text" name="user[name]">
  <br>
  Tags:
  <% Tag.all.each do |tag| %>
      <input type="checkbox" name="item[tag_ids][]" value="<%= tag.id %>"><%= tag.name %>
    <% end %>
  <br>

  <button>Save item</button>
</form>



